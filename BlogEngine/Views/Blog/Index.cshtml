@using BlogEngine.Models
@{
    ViewBag.Title = "Index";
}

<h2>Blog Feed</h2>

@using (var ctx = new ApplicationDbContext())
{
    foreach (var item in ctx.Blogs)
    {
        <div class="panel panel-body">
            <h3>
                @item.Title
            </h3>

            Author | @item.Author

            <a href="@Url.Action("Generic", "Blog", new { @id = item.Id})">
                Read More....
            </a>
        </div>
    }
}

